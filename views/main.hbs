{{>quote quote=quote.dataValues}}
{{#if courses}}
    {{#each courses}}
        {{#dataValues}}
            <div class="container-xl mx-2 my-10 bg-zinc-800 rounded-lg border-2 border-red-500 shadow-ms">
                <div class="w-full my-3 pb-3 text-center border-b-2 border-red-500">
                    <a href="/course/{{id}}"
                       class="text-red-500 font-bold text-xl hover:text-red-700">{{name}}</a>
                </div>
                <div class="grid grid-cols-7 gap-3 mx-2">
                    {{#each courseTrainings}}
                        {{#dataValues}}
                            <figure class="bg-zinc-800 text-center rounded-lg border-2 border-red-500 shadow-ms hover:bg-red-900">
                                <a href="/course/{{../../id}}/day/{{day}}">
                                    <div class="mx-4 my-2">
                                        <p class="text-4xl text-gray-100">{{day}}</p>
                                    </div>
                                    <div class="mx-4 my-2">
                                        <p class="text-red-500 text-sm">
                                            {{training.dataValues.trainingType.dataValues.name}}:
                                            {{training.dataValues.name}}
                                        </p>
                                    </div>
                                </a>
                            </figure>
                        {{/dataValues}}
                    {{/each}}
                </div>
                <div class="my-3 pt-3 flex flex-row justify-end border-t-2 border-red-500">
                    <div class="mx-5">
                        <span class="text-red-500 text-md font-bold mr-2">Создал:</span>
                        <span class="text-gray-100 ">
                            {{#user.dataValues}}
                                {{last_name}} {{first_name}} ({{name}})
                            {{/user.dataValues}}
                        </span>
                    </div>
                </div>
            </div>
        {{/dataValues}}
    {{/each}}
{{/if}}